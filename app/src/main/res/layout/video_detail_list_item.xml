<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_marginBottom="20dp"
	android:layout_height="wrap_content">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/video_thumbnail_list"
		android:layout_width="160dp"
		android:layout_height="0dp"
		android:scaleType="centerCrop"
		app:layout_constraintDimensionRatio="16:9"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:background="@tools:sample/backgrounds/scenic" />

	<TextView
		android:id="@+id/video_title_list"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:text="@string/entrevista_com_marlon"
		android:layout_marginStart="10dp"
		android:textStyle="bold"
		android:textColor="@android:color/black"
		app:layout_constraintEnd_toStartOf="@+id/video_actions_list"
		app:layout_constraintStart_toEndOf="@id/video_thumbnail_list"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/video_info"
		android:layout_width="0dp"
		android:layout_marginTop="3dp"
		android:textSize="12sp"
		app:layout_constraintTop_toBottomOf="@id/video_title_list"
		app:layout_constraintStart_toStartOf="@id/video_title_list"
		android:text="@string/entrevista_com_marlon"
		app:layout_constraintEnd_toStartOf="@id/video_actions_list"
		android:layout_height="wrap_content" />

	<ImageView
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:id="@+id/video_actions_list"
		android:background="@drawable/ic_more_vert_blacked_24dp"
		android:layout_width="18dp"
		android:layout_height="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>